extends layout

block content
	h1 Tilauskaavake
	form.form-horizontal(action="/tilaus" method="POST")
		fieldset
			// Nimen lisäys
			.form-group
				label Nimi:
				| 
				input#textinput.form-control.input-md(name='textinput', placeholder='Matti Meikäläinen', required='', type='text')
			// Sähköpostin lisäys
			.form-group
				label Sähköposti:
				| 
				input#sahkoposti.form-control.input-md(name='sahkoposti', placeholder='matti@meikalainen.fi', required='', type='text')
			// Puh-numeron lisäys
			.form-group
				label Puhelin:
				| 
				input#puhnro.form-control.input-md(name='puhnro', placeholder='0400123456', type='text')
			// Tapahtuman kuvailu
			.form-group
				label Tapahtuma:
				| 
				textarea#tapahtuma.form-control(name='tapahtuma', required='') Millaisesta tapahtumasta on kyse?
			// Osallistujien määrän valinta
			.form-group
				label Osallistujia maksimissaan:
				| 
				select#osallistujat.form-control(name='osallistujat', required='')
					option(value='5') 5
					|       
					option(value='10') 10
					|       
					option(value='15') 15
					|       
					option(value='20') 20
					|       
					option(value='25') 25
					|       
					option(value='30') 30
			// Tarkistus tarjoilusta
			.form-group
				label Tarjoillaanko tapahtuman yhteydessä?
				label(for='tarjoilu-0')
					input#tarjoilu-0(name='tarjoilu', value='1', type='checkbox')
					|       Kyllä
			// Kommentit
			.form-group
				label Lisäkommentit:
				| 
				textarea#kommentti.form-control(name='kommentti')
			// Button
			.form-group
				input(type='submit' value='Lähetä')