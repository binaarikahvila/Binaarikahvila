extends layout

block content
	h1= title
	.sivu
		p Ohessa ovat tarjolla olevat tuotteet. Maukkaita hetkiä!
		p Laktoosittomat tuotteet on merkattu L-kirjaimella, ja gluteenittomat G-kirjaimella
		div(id="Tuotteet")
			each tuote in context.tuote
				div(id="Tuote")
					h2= tuote.nimi
					p= tuote.kuvaus
					p= "Hinta: "+ tuote.hinta
					p
						if tuote.onLaktoositon
							| L 
						if tuote.onGluteeniton
							| G 
			else
				p Tuotteita ei löytynyt

